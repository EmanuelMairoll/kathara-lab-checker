{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "convergence_time": {
      "type": "number"
    },
    "structure": {
      "type": "string"
    },
    "default_image": {
      "type": "string"
    },
    "test": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "requiring_startup": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "ip_mapping": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[a-zA-Z0-9]+$": {
              "type": "object",
              "additionalProperties": false,
              "patternProperties": {
                "^([0-9]+)|lo|(eth\\d+)$": {
                  "anyOf": [
                    {
                      "type": "string",
                      "pattern": "^((25[0-5]|2[0-4][0-9]|1[0-9][0-9]|[1-9]?[0-9])\\.){3}(25[0-5]|2[0-4][0-9]|1[0-9][0-9]|[1-9]?[0-9])/(\\d|[1-2]\\d|3[0-2])$"
                    },
                    {
                      "format": "ipv4"
                    },
                    {
                      "format": "ipv6"
                    }
                  ]
                }
              }
            }
          }
        },
        "daemons": {
          "type": "object"
        },
        "kernel_routes": {
          "type": "object"
        },
        "protocols": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "ripd": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "injections": {
                  "type": "object",
                  "additionalProperties": false,
                  "patternProperties": {
                    "^[a-zA-Z0-9]+$": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "bgpd": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "injections": {
                  "type": "object",
                  "additionalProperties": false,
                  "patternProperties": {
                    "^[a-zA-Z0-9]+$": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                "networks": {
                  "title": "Check BGP announced networks",
                  "description": "Checks whether each device is announcing the networks specified",
                  "type": "object",
                  "additionalProperties": false,
                  "patternProperties": {
                    "^[a-zA-Z0-9]+$": {
                      "title": "Device name",
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "title": "Network",
                        "type": "string"
                      }
                    }
                  }
                },
                "neighbors": {
                  "title": "Check BGP neighbors",
                  "description": "Checks whether each device have a configured neighbor",
                  "type": "object",
                  "additionalProperties": false,
                  "patternProperties": {
                    "^[a-zA-Z0-9]+$": {
                      "title": "Device name",
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "ip": {
                            "format": "ipv4"
                          },
                          "asn": {
                            "type": "number"
                          }
                        }
                      }
                    }
                  }
                },
                "routes": {
                  "type": "object",
                  "additionalProperties": false,
                  "patternProperties": {
                    "^[a-zA-Z0-9]+$": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "route": {
                            "type": "string"
                          },
                          "aspath": {
                            "type": "array",
                            "items": {
                              "title": "AS-path for the route",
                              "description": "AS-path for the route, the originator is the last element",
                              "type": "array",
                              "minItems": 1,
                              "items": {
                                "type": "number"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "ospfd": {
              "type": "object"
            }
          }
        },
        "applications": {
          "type": "object",
          "properties": {
            "dns": {
              "type": "object",
              "properties": {
                "authoritative": {
                  "type": "object",
                  "patternProperties": {
                    "^[a-zA-Z0-9]+$": {
                      "type": "array",
                      "items": {
                        "anyOf": [
                          {
                            "type": "string",
                            "pattern": "^((25[0-5]|2[0-4][0-9]|1[0-9][0-9]|[1-9]?[0-9])\\.){3}(25[0-5]|2[0-4][0-9]|1[0-9][0-9]|[1-9]?[0-9])/(\\d|[1-2]\\d|3[0-2])$"
                          },
                          {
                            "format": "ipv4"
                          },
                          {
                            "format": "ipv6"
                          }
                        ]
                      }
                    }
                  }
                },
                "local_ns": {
                  "type": "object",
                  "patternProperties": {
                    "^((25[0-5]|2[0-4][0-9]|1[0-9][0-9]|[1-9]?[0-9])\\.){3}(25[0-5]|2[0-4][0-9]|1[0-9][0-9]|[1-9]?[0-9])/(\\d|[1-2]\\d|3[0-2])$": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                "records": {
                  "type": "object",
                  "properties": {
                    "A": {
                      "type": "object",
                      "patternProperties": {
                        "^[a-zA-Z0-9]+$": {
                          "type": "array",
                          "items": {
                            "anyOf": [
                              {
                                "type": "string",
                                "pattern": "^((25[0-5]|2[0-4][0-9]|1[0-9][0-9]|[1-9]?[0-9])\\.){3}(25[0-5]|2[0-4][0-9]|1[0-9][0-9]|[1-9]?[0-9])/(\\d|[1-2]\\d|3[0-2])$"
                              },
                              {
                                "format": "ipv4"
                              },
                              {
                                "format": "ipv6"
                              }
                            ]
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "reachability": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[a-zA-Z0-9]+$": {
              "anyOf": [
                {
                  "format": "ipv4"
                },
                {
                  "format": "ipv6"
                }
              ]
            }
          }
        }
      }
    }
  },
  "required": [
    "convergence_time",
    "test"
  ]
}